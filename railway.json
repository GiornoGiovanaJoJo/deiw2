{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE"
    },
    "deploy": {
        "startCommand": "sh -c 'python backend/create_custom_admin.py && python -m uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-8000}'",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}